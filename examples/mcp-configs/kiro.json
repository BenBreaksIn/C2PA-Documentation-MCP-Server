{
  "mcpServers": {
    "c2pa-docs": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--network=host",
        "c2pa-docs-server:latest"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "INFO",
        "GITHUB_TOKEN": ""
      },
      "disabled": false,
      "autoApprove": [
        "mcp_c2pa_docs_specsearch",
        "mcp_c2pa_docs_githubget",
        "mcp_c2pa_docs_exampleslist",
        "mcp_c2pa_docs_apiref"
      ]
    }
  }
}